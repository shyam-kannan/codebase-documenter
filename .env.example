# Database
DATABASE_URL=postgresql://codebase_user:codebase_password@postgres:5432/codebase_db
POSTGRES_USER=codebase_user
POSTGRES_PASSWORD=codebase_password
POSTGRES_DB=codebase_db

# Redis
REDIS_URL=redis://redis:6379/0

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# AI/LLM Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AWS/S3 Configuration
# Required for storing generated documentation
# Create bucket and get credentials from: https://console.aws.amazon.com/s3/
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=us-east-1
